<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel - YouNGU</title>
    @* --- Bootstrap 5 CSS --- *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* --- Bootstrap Icons --- *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @* --- Custom Site CSS --- *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouNGU.styles.css" asp-append-version="true" />

    @* --- Custom CSS for Admin Layout (Optional but Recommended) --- *@
    <style>
        body {
            /* Prevent vertical scrollbar when content fits */
            overflow-y: auto;
        }

        .sidebar {
            width: 280px; /* Sidebar width */
            min-height: 100vh; /* Full height */
            transition: width 0.3s ease; /* Smooth transition for potential toggle */
        }

        /* Style for active nav link */
        .sidebar .nav-link.active {
            background-color: #dc3545 !important; /* Red background for active item */
            color: white !important;
        }

        .sidebar .nav-link:not(.active):hover {
             background-color: #f8f9fa; /* Light background on hover for non-active items */
        }

        .sidebar .nav-link {
            color: #343a40; /* Darker text color */
            font-weight: 500;
        }

         .sidebar .nav-link .bi {
             margin-right: 0.75rem; /* Space between icon and text */
             width: 1.25rem; /* Fixed width for icons */
             text-align: center;
         }

        .sidebar .logout-btn {
             color: #dc3545; /* Red color for logout */
             font-weight: 500;
        }
         .sidebar .logout-btn:hover {
             background-color: #f8f9fa;
             color: #bb2d3b; /* Darker red on hover */
         }

        .main-content {
             flex-grow: 1; /* Take remaining width */
             min-height: 100vh;
             overflow-y: auto; /* Allow scrolling only for main content if needed */
        }

        /* Responsive: Hide sidebar text on smaller screens if needed */
        /*
        @@media (max-width: 768px) {
            .sidebar {
                width: 80px;
            }
            .sidebar .nav-link span, .sidebar .admin-brand-text {
                display: none;
            }
             .sidebar .nav-link .bi {
                 margin-right: 0;
             }
        }
        */

    </style>

    @* --- Section for page-specific styles --- *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        @* --- Sidebar --- *@
        <aside class="sidebar d-flex flex-column flex-shrink-0 p-3 bg-light border-end">
            @* Admin Brand/Logo *@
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                @* You can add an icon/logo here if you have one *@
                @* <i class="bi bi-camera-reels fs-4 me-2"></i> *@
                <span class="fs-5 fw-semibold admin-brand-text">VideoHub Admin</span>
            </a>
            <hr>

            @* Navigation Links *@
            <ul class="nav nav-pills flex-column mb-auto">
                @{
                    // Lấy thông tin route hiện tại để xác định active tab
                    var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? "";
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                    // var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? ""; // Action not needed for this logic

                    // Helper function to check if a link is active
                    bool IsActive(string controller) => currentArea == "Admin" && currentController == controller;
                }

                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       class="nav-link @(IsActive("Dashboard") ? "active" : "link-dark")" aria-current="@(IsActive("Dashboard") ? "page" : null)">
                        <i class="bi bi-house-door"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Videos" asp-action="Index"
                       class="nav-link @(IsActive("Videos") ? "active" : "link-dark")">
                        <i class="bi bi-camera-video"></i>
                        <span>Quản lý video</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                       class="nav-link @(IsActive("Users") ? "active" : "link-dark")">
                        <i class="bi bi-people"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                </li>
                 <li>
                    <a asp-area="Admin" asp-controller="Statistics" asp-action="Index"
                       class="nav-link @(IsActive("Statistics") ? "active" : "link-dark")">
                        <i class="bi bi-bar-chart-line"></i>
                        <span>Thống kê</span>
                    </a>
                </li>
                 <li>
                    <a asp-area="Admin" asp-controller="Settings" asp-action="Index"
                       class="nav-link @(IsActive("Settings") ? "active" : "link-dark")">
                        <i class="bi bi-gear"></i>
                        <span>Cài đặt</span>
                    </a>
                </li>
            </ul>
            <hr>

            @* Logout Button/Form *@
            <div class="mt-auto"> @* Pushes logout to the bottom *@
                 <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutFormAdmin">
                     <button type="submit" class="btn w-100 d-flex align-items-center logout-btn">
                         <i class="bi bi-box-arrow-right"></i>
                         <span>Đăng xuất</span>
                     </button>
                 </form>
            </div>
        </aside>

        @* --- Main Content Area --- *@
        <main role="main" class="main-content p-4">
            @* Render the body content of specific admin pages here *@
            @RenderBody()
        </main>
    </div>

    @* --- Footer (Optional for Admin) --- *@
    @* You might not need a footer in the admin area, but keeping it based on your example * *@
  
    <footer class="border-top footer text-muted bg-light"> @* Added bg-light for consistency *@
        <div class="container-fluid px-4"> @* Use container-fluid for full width *@
            &copy; @DateTime.Now.Year - Admin Panel - YouNGU
        </div>
    </footer>


    @* --- JavaScript Includes --- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* --- Section for page-specific scripts --- *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
